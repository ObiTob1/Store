@using Store.Models
@model List<Product>

<div>
    <h1>Все товары</h1>
</div>
<div>
    <a href="/Home/Create/">Добавить новый товар</a>
</div>

<div>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Бренд</th>
                <th>Категория</th>
                <th>Цена</th>
                <th>Описание</th>
                <th>Изображение</th>
                <th>Время создание</th>
                <th>Действия</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Brend</td>
                    <td>@item.Category</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td></td>
                    <td>@item.CreatedAt.ToString("hh/mm dd/mm/yyyy")</td>
                    <td>
                        <a href="/Home/Edit/@item.Id">Изменить</a>
                        <a href="/Home/Delete/@item.Id" onclick="return confirm('Вы уверены, что хотите удалить продукт?')">Удалить</a>
                    </td>

                </tr>

            }
        </tbody>

    </table>
</div>